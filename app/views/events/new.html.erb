
<h2>Create Event</h2>

<%= link_to 'Logout', destroy_user_session_path, method: :delete %>
</br>
<%= link_to 'Back To Team', team_path(@team_id)%>


<%= form_for(@event) do |f| %>

  <div><%= f.label :subject %><br />
  <%= f.text_field :subject, autofocus: true %></div>

  <div><%= f.label :date %><br />
  <%= f.datetime_select :date %></div>

  <div><%= f.label :description %><br />
  <%= f.text_area :description, rows: 5, cols: 50 %></div>

  <div><%= f.label :latitude %><br />
  <%= f.text_field :latitude %></div>

  <div><%= f.label :longitude %><br />
  <%= f.text_field :longitude %></div>
  </br>
  <div id="map-canvas"></div>
  </br>

  <div><%= f.submit "Create Event" %></div>
<% end %>

